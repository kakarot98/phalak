// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id         String      @id @default(cuid())
  email      String      @unique
  name       String?
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  projects   Project[]
}

model Project {
  id          String   @id @default(cuid())
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Future: multi-user ownership
  userId      String?
  user        User?    @relation(fields: [userId], references: [id], onDelete: Cascade)

  folders     Folder[]
  boards      Board[]
}

model Folder {
  id             String   @id @default(cuid())
  name           String
  description    String?
  projectId      String
  parentFolderId String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  project        Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  parentFolder   Folder?  @relation("SubFolders", fields: [parentFolderId], references: [id], onDelete: Cascade)
  subFolders     Folder[] @relation("SubFolders")
  boards         Board[]

  @@index([projectId])
  @@index([parentFolderId])
}

model Board {
  id          String   @id @default(cuid())
  projectId   String
  folderId    String?
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  project      Project      @relation(fields: [projectId], references: [id], onDelete: Cascade)
  folder       Folder?      @relation(fields: [folderId], references: [id], onDelete: Cascade)
  cards        Card[]
  connections  Connection[]
  subBoardCards Card[]      @relation("SubBoards")

  @@index([projectId])
  @@index([folderId])
}

enum CardType {
  TEXT
  TODO
  IMAGE
  LINK
  COLUMN
  SUBBOARD
}

model Card {
  id        String   @id @default(cuid())
  boardId   String
  type      String   @default("TEXT") // CardType as string for SQLite compatibility

  // Position and dimensions (required for canvas layout)
  positionX Float
  positionY Float
  width     Float    @default(280)
  height    Float?   // Auto-height for some card types
  zIndex    Int      @default(0)

  // Visual styling
  color     String?  // Color strip for categorization (#ff0000, #00ff00, etc.)

  // Content (polymorphic - structure depends on type)
  title     String?
  content   String?  // JSON string for type-specific data

  // For SUBBOARD type - links to another board
  linkedBoardId String?
  linkedBoard   Board?  @relation("SubBoards", fields: [linkedBoardId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  board           Board        @relation(fields: [boardId], references: [id], onDelete: Cascade)
  connectionsFrom Connection[] @relation("FromCard")
  connectionsTo   Connection[] @relation("ToCard")

  @@index([boardId])
  @@index([linkedBoardId])
}

model Connection {
  id         String   @id @default(cuid())
  boardId    String
  fromCardId String
  toCardId   String

  // Arrow styling
  style      String?  @default("solid") // "solid", "dashed", "dotted"
  color      String?  // Arrow color
  label      String?  // Optional text label on the arrow

  createdAt  DateTime @default(now())

  board      Board @relation(fields: [boardId], references: [id], onDelete: Cascade)
  fromCard   Card  @relation("FromCard", fields: [fromCardId], references: [id], onDelete: Cascade)
  toCard     Card  @relation("ToCard", fields: [toCardId], references: [id], onDelete: Cascade)

  @@index([boardId])
  @@index([fromCardId])
  @@index([toCardId])
}
